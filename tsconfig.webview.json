{
	"compilerOptions": {
		"module": "ES2022",
		"moduleResolution": "bundler",
		"target": "ES2022",
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/webview/**/*.ts",
		"src/webview/**/*.tsx",
		"src/shared/**/*.ts"
	]
}
